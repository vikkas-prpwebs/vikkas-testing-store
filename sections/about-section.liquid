<style>
.hero-section {
  background-image: url({{ section.settings.image | img_url: '1920x' }});
  background-size: cover;
  background-position: center;
  /* height: 100vh; */
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding:120px 0px;
}

.overlay-content {
    max-width: 500px;
    width: 90%;
    margin: auto;
}

.overlay-content h1 {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 20px;
  color:#fff;
  
}

.book-btn {
  background-color: white;
  color: black;
  padding: 12px 24px;
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: 600;
  border-radius: 5px;
  transition: all 0.3s ease;
}

.book-btn:hover {
  background-color: #f0f0f0;
}
</style>

<div class="hero-section">
  <div class="overlay-content">
    <h1>{{ section.settings.head }}</h1>
    <a href="{{ section.settings.url_button }}" class="book-btn">{{ section.settings.button }}</a>
  </div>
</div>

{% schema %}
{
  "name": "booknow",
  "settings": [
    {
      "type": "text",
      "id": "button",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "url_button",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "head",
      "label": "Heading Text"
    }
  ],
  "presets": [
    {
      "name": "Home Book Now"
    }
  ]
}
{% endschema %}
